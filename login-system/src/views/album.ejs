<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Álbum de Fotos</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Margarine&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Margarine', cursive;
            background-color: #f8f9fa;
        }
        header {
            background-color: #28a745; /* Verde suave */
            color: white;
            padding: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        header h1 {
            margin: 0;
            flex: 1;
            text-align: center;
        }
        .logo img {
            height: 50px; /* Ajusta la altura del logo según tus necesidades */
            margin-left: 20px;
        }
        nav {
            margin-right: 20px; /* Margen derecho para el menú de navegación */
        }
        nav a {
            color: white;
            margin: 0 15px;
            font-size: 18px;
            text-decoration: none;
        }
        nav a:hover {
            text-decoration: underline;
        }
        main {
            padding: 20px;
            text-align: center;
        }
        footer {
            background-color: #343a40;
            color: white;
            padding: 10px 0;
            text-align: center;
        }
        footer p {
            margin: 0;
        }
        .section-title {
            margin-bottom: 20px;
            font-size: 24px;
            color: #28a745; /* Verde suave */
        }
        .image-gallery-container {
            display: flex;
            flex-wrap: wrap; /* Permite que las imágenes se ajusten en múltiples filas si es necesario */
            justify-content: center; /* Centra las imágenes en el contenedor */
            gap: 15px; /* Espacio entre las imágenes */
            margin-top: 10px; /* Espacio entre el título y las imágenes */
            cursor: pointer; /* Cambia el cursor al pasar sobre la imagen */
        }
        .image-gallery img {
            max-width: 200px; /* Ajusta el tamaño máximo de las imágenes según sea necesario */
            height: auto;
            border-radius: 8px;
            object-fit: cover; /* Asegura que las imágenes mantengan su aspecto dentro del contenedor */
        }
        .image-gallery img:hover {
            transform: scale(1.05);
        }
        .upload-form {
            margin-top: 30px;
            background-color: #e9ecef;
            padding: 20px;
            border-radius: 8px;
        }
        .upload-form input[type="file"] {
            margin-top: 10px;
        }
        @media (max-width: 1200px) {
            .module {
                flex: 1 1 calc(33.333% - 20px); /* 3 columnas para pantallas grandes */
                max-width: calc(33.333% - 20px);
            }
        }
        @media (max-width: 992px) {
            .module {
                flex: 1 1 calc(50% - 20px); /* 2 columnas para pantallas medianas */
                max-width: calc(50% - 20px);
            }
        }
        @media (max-width: 768px) {
            .module {
                flex: 1 1 100%; /* 1 columna para pantallas pequeñas */
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img src="/img/home.jpg" alt="Logo"> <!-- Cambia la ruta al logo -->
        </div>
        <h1>Álbum de Fotos</h1>
        <nav>
            <a href="/home"><i class="fas fa-home"></i> Inicio</a>
            <a href="/page"><i class="fas fa-briefcase"></i> Servicios</a>
            <a href="/sobre"><i class="fas fa-history"></i> Nuestra Historia</a>
            <a href="/album"><i class="fas fa-images"></i> Álbum de Fotos</a>
            <a href="/contacto"><i class="fas fa-envelope"></i> Contacto</a>
        </nav>
    </header>

    <main>
        <section class="image-gallery">
            <h2 class="section-title">Fotos de Actividades</h2>
            <div class="image-gallery-container">
                <% if (images.length > 0) { %>
                    <% images.forEach(function(image) { %>
                        <img src="/uploads/<%= image %>" alt="Foto" class="clickable-image">
                    <% }); %>
                <% } else { %>
                    <p>No hay imágenes disponibles.</p>
                <% } %>
                <!-- Aquí puedes mantener las imágenes estáticas si deseas -->
                <img src="/img/act1.jpg" class="clickable-image">
                <img src="/img/act2.jpg" class="clickable-image">
                <img src="/img/act3.jpg" class="clickable-image">
                <img src="/img/act4.jpg" class="clickable-image">
                <img src="/img/act5.jpg" class="clickable-image">
                <img src="/img/act6.jpg" class="clickable-image">
                <img src="/img/act7.jpg" class="clickable-image">
                <img src="/img/act8.jpg" class="clickable-image">
                <img src="/img/act9.jpg" class="clickable-image">
                <img src="/img/act10.jpg" class="clickable-image">
                <img src="/img/act11.jpg" class="clickable-image">
                <img src="/img/act12.jpg" class="clickable-image">
                <img src="/img/act13.jpg" class="clickable-image">
                <img src="/img/act14.jpg" class="clickable-image">
                <img src="/img/act15.jpg" class="clickable-image">
                <img src="/img/act16.jpg" class="clickable-image">
                <img src="/img/act17.jpg" class="clickable-image">
                <img src="/img/act18.jpg" class="clickable-image">
            </div>
        </section>

        <section class="upload-form">
            <h2 class="section-title">Agregar Más Fotos</h2>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <input type="file" name="image" accept="image/*" required>
                <button type="submit" class="btn btn-success mt-2">Subir Foto</button>
            </form>
        </section>
    </main>

    <footer>
        <p>© 2024 ING. Frida Berlinda Garcia</p>
    </footer>

    <!-- Modal para mostrar la imagen en grande -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Vista Previa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img id="modalImage" src="" alt="Imagen Grande" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript para manejar el clic en las imágenes -->
    <script>
        function initializeImageClickEvents() {
            document.querySelectorAll('.clickable-image').forEach(image => {
                image.addEventListener('click', function() {
                    const modalImage = document.getElementById('modalImage');
                    modalImage.src = this.src; // Asigna la fuente de la imagen seleccionada al modal
                    const myModal = new bootstrap.Modal(document.getElementById('imageModal'));
                    myModal.show(); // Muestra el modal
                });
            });
        }

        // Llamar a la función de inicialización después de que el contenido esté completamente cargado
        document.addEventListener('DOMContentLoaded', initializeImageClickEvents);
    </script>
</body>
</html>
