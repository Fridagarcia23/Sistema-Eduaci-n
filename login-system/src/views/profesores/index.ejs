<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profesores</title>
    <link href="https://fonts.googleapis.com/css2?family=Margarine&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Margarine', cursive;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .menu-container {
            display: flex;
            min-height: 100vh;
        }
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }
        .sidebar ul li {
            padding: 10px;
            text-align: left;
            flex-grow: 1;
            display: flex;
            align-items: center;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
            width: 100%;
        }
        .sidebar ul li a:hover {
            background-color: #495057;
        }
        .content {
            padding: 20px;
            flex-grow: 1;
            position: relative;
        }
        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 100px; /* Ajusta el tamaño de la imagen según tus necesidades */
            height: auto;
        }
        .profesor-table {
            margin-top: 20px;
        }
        .profesor-table table th, .profesor-table table td {
            text-align: center;
        }
        .search-form {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .search-form input[type="text"] {
            width: 250px;
        }
        .add-profesor {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .add-profesor .btn {
            background-color: #007bff;
            color: white;
        }
        .add-profesor .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <div class="sidebar">
            <ul>
                <li><a href="/dashboard"><i class="fas fa-arrow-left"></i> Regresar</a></li>
                <li><a href="/usuarios"><i class="fas fa-users"></i> Usuarios</a></li>
                <li><a href="/grados"><i class="fas fa-graduation-cap"></i> Grados</a></li>
                <li><a href="/profesores"><i class="fas fa-chalkboard-teacher"></i> Profesores</a></li>
                <li><a href="/reportes"><i class="fas fa-chart-bar"></i> Reportes</a></li>
                <li><a href="/asistencias"><i class="fas fa-user-check"></i> Asistencias</a></li>
                <li><a href="/pagos"><i class="fas fa-money-bill-alt"></i> Pagos</a></li>
                <li><a href="/periodo-escolar"><i class="fas fa-calendar-alt"></i> Periodo Escolar</a></li>
                <li><a href="/crear-recibos"><i class="fas fa-file-invoice"></i> Crear Recibos</a></li>
                <li><a href="/cursos"><i class="fas fa-book"></i> Cursos</a></li>
                <li><a href="/notificaciones"><i class="fas fa-bell"></i> Notificaciones</a></li>
                <li><a href="/horarios"><i class="fas fa-clock"></i> Horarios</a></li>
                <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </div>
        <div class="content">
            <img src="/img/home.jpg" alt="Logo" class="logo">
            <h1 class="text-center">Profesores</h1>
            <div class="search-form">
                <form action="/profesores" method="GET">
                    <input type="text" class="form-control" id="search" placeholder="Buscar profesor...">
                </form>
                <button class="btn btn-primary ml-2"><i class="fas fa-search"></i></button>
            </div>
            <div class="add-profesor">
                <a href="/profesores/nuevo" class="btn btn-primary"><i class="fas fa-chalkboard-teacher"></i> Nuevo Profesor</a>
            </div>
            <div class="profesor-table">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Especialidad</th>
                            <th>Años de Experiencia</th>
                            <th>Fecha de Ingreso</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% profesores.forEach(profesor => { %>
                        <tr>
                            <td><%= profesor.nombre %></td>
                            <td><%= profesor.email %></td>
                            <td><%= profesor.especialidad %></td>
                            <td><%= profesor.experiencia_years %></td>
                            <td><%= profesor.fecha_ingreso %></td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/profesores/editar/<%= profesor.id %>" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <form action="/profesores/eliminar/<%= profesor.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                                    </form>
                                    <a href="/profesores/ver/<%= profesor.id %>" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                </div>
                            </td>
                        </tr>
                        <% } ) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
